<odoo>
    <record id="view_gym_trainer_form" model="ir.ui.view">
        <field name="name">gym.trainer.form</field>
        <field name="model">gym.trainer</field>
        <field name="arch" type="xml">
            <form string="Trainer">
                <group>
                    <field name="name"/>
                    <field name="specialty"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="assigned_member_ids"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_gym_trainer_tree" model="ir.ui.view">
        <field name="name">gym.trainer.tree</field>
        <field name="model">gym.trainer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialty"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_trainer" name="Trainers" parent="menu_gym_root"/>
    <act_window id="action_gym_trainer" name="Trainers"
        res_model="gym.trainer" view_mode="tree,form"
        menu_id="menu_trainer"/>
</odoo>
