<odoo>
    <record id="view_gym_class_attendance_form" model="ir.ui.view">
        <field name="name">gym.class.attendance.form</field>
        <field name="model">gym.class.attendance</field>
        <field name="arch" type="xml">
            <form string="Class Attendance">
                <group>
                    <field name="session_id"/>
                    <field name="member_id"/>
                    <field name="check_in_time"/>
                    <field name="status"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_gym_class_attendance_tree" model="ir.ui.view">
        <field name="name">gym.class.attendance.tree</field>
        <field name="model">gym.class.attendance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="session_id"/>
                <field name="member_id"/>
                <field name="check_in_time"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_attendance" name="Attendance" parent="menu_gym_root"/>
    <act_window id="action_gym_class_attendance" name="Class Attendance"
        res_model="gym.class.attendance" view_mode="tree,form"
        menu_id="menu_attendance"/>
</odoo>
