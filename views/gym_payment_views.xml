<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Menu for Payments under Gym -->

    <!-- Action -->
    <record id="action_gym_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">gym.payment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_gym_payment_root" name="Payments" parent="menu_gym_root" sequence="40"  action="action_gym_payment"/>
    <!-- List View -->
    <record id="view_gym_payment_list" model="ir.ui.view">
        <field name="name">gym.payment.list</field>
        <field name="model">gym.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="member_id"/>
                <field name="plan_id"/>
                <field name="amount"/>
                <field name="payment_method"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_payment_form" model="ir.ui.view">
        <field name="name">gym.payment.form</field>
        <field name="model">gym.payment</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <sheet>
                    <group>
                        <field name="member_id"/>
                        <field name="plan_id"/>
                        <field name="amount"/>
                        <field name="payment_date"/>
                        <field name="payment_method"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
