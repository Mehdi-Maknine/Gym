<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Kanban View -->
    <record id="view_gym_dashboard_kanban" model="ir.ui.view">
        <field name="name">gym.dashboard.kanban</field>
        <field name="model">gym.dashboard</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_primary_left">
                                <h3><t t-esc="record.name"/></h3>
                                <div>Active Members: <strong><t t-esc="record.active_members"/></strong></div>
                                <div>Upcoming Sessions: <strong><t t-esc="record.upcoming_sessions"/></strong></div>
                                <div>Expiring Memberships: <strong><t t-esc="record.expiring_members"/></strong></div>
                                <div>Total Payments: â‚¬<strong><t t-esc="record.total_payments"/></strong></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_gym_dashboard_kanban" model="ir.actions.act_window">
        <field name="name">Gym Dashboard</field>
        <field name="res_model">gym.dashboard</field>
        <field name="view_mode">kanban</field>
        <field name="target">main</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_gym_dashboard" name="Dashboard" parent="menu_gym_root" sequence="1" action="action_gym_dashboard_kanban"/>

</odoo>
