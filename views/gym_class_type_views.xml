<odoo>
    <record id="view_gym_class_type_form" model="ir.ui.view">
        <field name="name">gym.class.type.form</field>
        <field name="model">gym.class.type</field>
        <field name="arch" type="xml">
            <form string="Class Type">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_gym_class_type_tree" model="ir.ui.view">
        <field name="name">gym.class.type.tree</field>
        <field name="model">gym.class.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_class_type" name="Class Types" parent="menu_gym_root"/>
    <act_window id="action_gym_class_type" name="Class Types"
        res_model="gym.class.type" view_mode="tree,form"
        menu_id="menu_class_type"/>
</odoo>
