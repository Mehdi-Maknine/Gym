<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Submenu -->
    <menuitem id="menu_gym_members" name="Members" parent="menu_gym_root" sequence="20"/>

    <!-- Action -->
    <record id="action_gym_member" model="ir.actions.act_window">
        <field name="name">Gym Members</field>
        <field name="res_model">gym.member</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Bind Action to Menu -->
    <menuitem id="menu_action_gym_member"
              name="Manage Members"
              parent="menu_gym_members"
              action="action_gym_member"
              sequence="30"/>

    <!-- List View -->
    <record id="view_gym_member_list" model="ir.ui.view">
        <field name="name">gym.member.list</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_gym_member_form" model="ir.ui.view">
        <field name="name">gym.member.form</field>
        <field name="model">gym.member</field>
        <field name="arch" type="xml">
            <form string="Gym Member">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
